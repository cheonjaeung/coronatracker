<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/search"
        app:navigationIcon="@drawable/ic_arrow_left_24dp"/>
    
    <EditText
        android:id="@+id/search_searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@drawable/background_search_bar"
        android:backgroundTint="@color/colorElevation"
        android:elevation="12dp"
        android:drawableStart="@drawable/ic_search_24dp"
        android:hint="@string/searchbar_hint"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionSearch"
        app:layout_constraintTop_toBottomOf="@+id/search_toolbar"/>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_resultList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/search_searchBar"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>