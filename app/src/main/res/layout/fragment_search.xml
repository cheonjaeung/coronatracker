<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/search_searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@drawable/background_search_bar"
        android:backgroundTint="@color/colorElevation"
        android:elevation="12dp"
        android:drawableStart="@drawable/ic_search_24dp"
        android:hint="@string/searchBarHint"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionSearch"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/search_searchBar"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/search_loadingLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?android:attr/windowBackground"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/search_list"
        app:layout_constraintBottom_toBottomOf="@+id/search_list">

        <ImageView
            android:id="@+id/search_loading"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_updating_24dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>